{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "declarationDir": "./dist/typings",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "lib": [
      "ES2015",
      "ESNext.Array",
      "ES2019.Array",
      "DOM"
    ],
    "types": [
      "node",
      "symbol-observable",
      "jest"
    ],
    "paths": {
      "solid-auth-client-real/*": [
        "node_modules/solid-auth-client/*"
      ],
      "websocket-polyfill": [
        "./polyfills/websocket.js"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "tests"
  ]
}
