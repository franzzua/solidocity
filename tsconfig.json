{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist/esm",
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "declarationDir": "./dist/typings",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "lib": [
      "ES2015",
      "ESNext.Array",
      "ES2019.Array",
      "DOM"
    ],
    "types": [
      "node",
      "symbol-observable",
      "jest"
    ],
    "paths": {
      "text-encoding": [
        "./polyfills/text-encoder.js"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "tests"
  ]
}
